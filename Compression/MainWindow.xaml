<Window x:Class="Compression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compression" Height="350" Width="487.687" FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="#FF3A00FF" Opacity="0.5"/>
        </Grid.Background>
        <Button Content="Compress" HorizontalAlignment="Left" Margin="33,238,0,0" VerticalAlignment="Top" Width="138" Height="50" FontSize="20" Click="Button_Click_1"/>
        <Button Content="Decompress" HorizontalAlignment="Left" Margin="131,238,0,0" VerticalAlignment="Top" Width="138" Height="50" FontSize="20" Click="Button_Click_2" Grid.Column="1"/>
        <TextBox x:Name="screen" HorizontalAlignment="Left" Height="204" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="460" FontSize="18" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
